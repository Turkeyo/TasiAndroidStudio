<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/a1_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="點餐："
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/a1_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇"
        android:textSize="30sp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/a1_order"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/a1_checkorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認餐點："
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="@+id/a1_order"
        app:layout_constraintTop_toBottomOf="@+id/a1_order"/>
    <TextView
        android:id="@+id/a1_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飲料：無"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/a1_checkorder"
        app:layout_constraintTop_toBottomOf="@+id/a1_checkorder"/>

    <TextView
        android:id="@+id/a1_suger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="甜度：無"
        android:textSize="20dp"
        android:textColor="#FFEA5FE7"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/a1_drink"
        app:layout_constraintTop_toBottomOf="@+id/a1_drink"/>

    <TextView
        android:id="@+id/a1_ice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冰塊：無"
        android:textColor="@color/teal_200"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/a1_suger"
        app:layout_constraintTop_toBottomOf="@+id/a1_suger" />
</androidx.constraintlayout.widget.ConstraintLayout>